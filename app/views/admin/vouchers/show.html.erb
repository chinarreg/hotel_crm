<h1 class="h4"><%= @voucher.voucher_code %></h1>
<p><strong>Member:</strong> <%= @voucher.member.full_name %></p>
<p><strong>Issued On:</strong> <%= @voucher.issued_on %></p>
<p><strong>Expiry Date:</strong> <%= @voucher.expiry_date %></p>
<p><strong>Status:</strong> <%= @voucher.status %></p>
<div class="d-flex gap-2">
  <%= link_to "Edit", edit_admin_voucher_path(@voucher), class: "btn btn-primary" %>
  <%= button_to "Delete", admin_voucher_path(@voucher), method: :delete, data: { turbo_confirm: "Delete this voucher?" }, class: "btn btn-outline-danger" %>
</div>
