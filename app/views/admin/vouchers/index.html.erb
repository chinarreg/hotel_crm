<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Vouchers</h1>
  <%= link_to "New Voucher", new_admin_voucher_path, class: "btn btn-primary" %>
</div>

<%= form_with url: admin_vouchers_path, method: :get, local: true, class: "row g-2 mb-3" do |f| %>
  <div class="col-12 col-md-7"><%= f.text_field :q, value: params[:q], class: "form-control", placeholder: "Search voucher code or member" %></div>
  <div class="col-6 col-md-3"><%= f.select :status, options_for_select([["All status", ""]] + Voucher.statuses.keys.map { |s| [s.humanize, s] }, params[:status]), {}, class: "form-select" %></div>
  <div class="col-6 col-md-2 d-grid"><%= f.submit "Filter", class: "btn btn-outline-secondary" %></div>
<% end %>

<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead><tr><th>Code</th><th>Member</th><th>Issued</th><th>Status</th><th></th></tr></thead>
    <tbody>
      <% @vouchers.each do |voucher| %>
        <tr>
          <td><%= voucher.voucher_code %></td>
          <td><%= voucher.member.full_name %></td>
          <td><%= voucher.issued_on %></td>
          <td><span class="badge text-bg-secondary"><%= voucher.status %></span></td>
          <td class="text-end"><%= link_to "View", admin_voucher_path(voucher), class: "btn btn-sm btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%== simple_pagination(@pagination) if @pagination %>
