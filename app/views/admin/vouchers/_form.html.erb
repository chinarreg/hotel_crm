<%= form_with model: [:admin, @voucher], class: "row g-3" do |f| %>
  <div class="col-12 col-md-6"><%= f.label :member_id, class: "form-label" %><%= f.collection_select :member_id, Member.order(:full_name), :id, :full_name, {}, class: "form-select" %></div>
  <div class="col-12 col-md-6"><%= f.label :voucher_code, class: "form-label" %><%= f.text_field :voucher_code, class: "form-control", required: true %></div>
  <div class="col-12 col-md-4"><%= f.label :issued_on, class: "form-label" %><%= f.date_field :issued_on, class: "form-control", required: true %></div>
  <div class="col-12 col-md-4"><%= f.label :expiry_date, class: "form-label" %><%= f.date_field :expiry_date, class: "form-control", required: true %></div>
  <div class="col-12 col-md-4"><%= f.label :status, class: "form-label" %><%= f.select :status, Voucher.statuses.keys, {}, class: "form-select" %></div>
  <div class="col-12"><%= f.submit class: "btn btn-primary" %></div>
<% end %>
