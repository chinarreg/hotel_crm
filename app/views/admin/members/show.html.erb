<h1 class="h4"><%= @member.full_name %></h1>
<p><strong>Membership Number:</strong> <%= @member.membership_number %></p>
<p><strong>Email:</strong> <%= @member.email %></p>
<p><strong>Phone:</strong> <%= @member.phone %></p>
<p><strong>Status:</strong> <%= @member.status %></p>
<div class="d-flex gap-2">
  <%= link_to "Edit", edit_admin_member_path(@member), class: "btn btn-primary" %>
  <%= button_to "Delete", admin_member_path(@member), method: :delete, data: { turbo_confirm: "Delete this member?" }, class: "btn btn-outline-danger" %>
</div>
