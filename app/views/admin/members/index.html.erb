<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Members</h1>
  <%= link_to "New Member", new_admin_member_path, class: "btn btn-primary" %>
</div>

<%= form_with url: admin_members_path, method: :get, local: true, class: "row g-2 mb-3" do |f| %>
  <div class="col-12 col-md-7"><%= f.text_field :q, value: params[:q], class: "form-control", placeholder: "Search name, email, phone, membership no" %></div>
  <div class="col-6 col-md-3"><%= f.select :status, options_for_select([["All status", ""]] + Member.statuses.keys.map { |s| [s.humanize, s] }, params[:status]), {}, class: "form-select" %></div>
  <div class="col-6 col-md-2 d-grid"><%= f.submit "Filter", class: "btn btn-outline-secondary" %></div>
<% end %>

<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead><tr><th>Name</th><th>Membership No.</th><th>Phone</th><th>Status</th><th></th></tr></thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.full_name %></td>
          <td><%= member.membership_number %></td>
          <td><%= member.phone %></td>
          <td><span class="badge text-bg-secondary"><%= member.status %></span></td>
          <td class="text-end"><%= link_to "View", admin_member_path(member), class: "btn btn-sm btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%== simple_pagination(@pagination) if @pagination %>
