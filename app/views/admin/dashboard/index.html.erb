<h1 class="h4 mb-3">Dashboard</h1>
<div class="row g-3">
  <div class="col-12 col-md-6 col-xl-3">
    <div class="card text-bg-primary"><div class="card-body"><h2 class="h6">Members</h2><p class="display-6 mb-0"><%= @members_count %></p></div></div>
  </div>
  <div class="col-12 col-md-6 col-xl-3">
    <div class="card text-bg-success"><div class="card-body"><h2 class="h6">Active Members</h2><p class="display-6 mb-0"><%= @active_members %></p></div></div>
  </div>
  <div class="col-12 col-md-6 col-xl-3">
    <div class="card text-bg-warning"><div class="card-body"><h2 class="h6">Vouchers</h2><p class="display-6 mb-0"><%= @vouchers_count %></p></div></div>
  </div>
  <div class="col-12 col-md-6 col-xl-3">
    <div class="card text-bg-info"><div class="card-body"><h2 class="h6">Completed Imports</h2><p class="display-6 mb-0"><%= @imports_count %></p></div></div>
  </div>
  <div class="col-12 col-md-6 col-xl-3">
    <div class="card text-bg-secondary"><div class="card-body"><h2 class="h6">Campaigns</h2><p class="display-6 mb-0"><%= @campaigns_total %></p></div></div>
  </div>
  <div class="col-12 col-md-6 col-xl-3">
    <div class="card text-bg-success"><div class="card-body"><h2 class="h6">Messages Sent</h2><p class="display-6 mb-0"><%= @campaign_messages_sent %></p></div></div>
  </div>
  <div class="col-12 col-md-6 col-xl-3">
    <div class="card text-bg-danger"><div class="card-body"><h2 class="h6">Messages Failed</h2><p class="display-6 mb-0"><%= @campaign_messages_failed %></p></div></div>
  </div>
  <div class="col-12 col-md-6 col-xl-3">
    <div class="card text-bg-dark"><div class="card-body"><h2 class="h6">Messages Pending</h2><p class="display-6 mb-0"><%= @campaign_pending %></p></div></div>
  </div>
</div>
