<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Promotion Campaigns</h1>
  <%= link_to "New Campaign", new_admin_promotion_campaign_path, class: "btn btn-primary" %>
</div>

<%= form_with url: admin_promotion_campaigns_path, method: :get, local: true, class: "row g-2 mb-3" do |f| %>
  <div class="col-12 col-md-7"><%= f.text_field :q, value: params[:q], class: "form-control", placeholder: "Search name or template" %></div>
  <div class="col-6 col-md-3"><%= f.select :status, options_for_select([["All status", ""]] + PromotionCampaign.statuses.keys.map { |s| [s.humanize, s] }, params[:status]), {}, class: "form-select" %></div>
  <div class="col-6 col-md-2 d-grid"><%= f.submit "Filter", class: "btn btn-outline-secondary" %></div>
<% end %>

<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th>Name</th>
        <th>Audience</th>
        <th>Status</th>
        <th>Recipients</th>
        <th>Sent</th>
        <th>Failed</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @campaigns.each do |campaign| %>
        <tr>
          <td><%= campaign.name %></td>
          <td><%= campaign.audience_type.humanize %></td>
          <td><span class="badge text-bg-secondary"><%= campaign.status %></span></td>
          <td><%= campaign.total_recipients %></td>
          <td><%= campaign.sent_count %></td>
          <td><%= campaign.failed_count %></td>
          <td class="text-end"><%= link_to "View", admin_promotion_campaign_path(campaign), class: "btn btn-sm btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%== simple_pagination(@pagination) if @pagination %>
